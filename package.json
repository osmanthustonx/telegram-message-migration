{
  "name": "tg-migrate-a-to-b",
  "version": "1.0.0",
  "description": "Telegram message migration tool from account A to B using GramJS",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tg-migrate": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "npx esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/bundle.js --format=cjs",
    "build:sea": "node --experimental-sea-config sea-config.json",
    "build:exe": "bash scripts/build-exe.sh",
    "build:all": "npm run build && npm run build:bundle && npm run build:sea && npm run build:exe",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "node -e \"const fs=require('fs');['./session.txt','./migration-progress.json','./migration.log'].forEach(f=>{try{fs.unlinkSync(f);console.log('Deleted:',f)}catch{}});\""
  },
  "keywords": [
    "telegram",
    "migration",
    "gramjs",
    "forward",
    "messages"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "input": "^1.0.1",
    "telegram": "^2.26.16",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  }
}
