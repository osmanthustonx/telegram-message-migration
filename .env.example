# Telegram API Credentials
# Get your API ID and Hash from https://my.telegram.org/apps
TG_API_ID=
TG_API_HASH=

# Account A Phone Number (required)
TG_PHONE_A=

# Target Account B (username or phone number)
TG_TARGET_USER_B=

# Session File Path
TG_SESSION_PATH=./session-a.txt

# Migration Settings
TG_BATCH_SIZE=100
TG_BATCH_DELAY=1000
TG_GROUP_PREFIX=[Migrated]
TG_FLOOD_WAIT_THRESHOLD=300

# Progress and Logging
TG_PROGRESS_PATH=./migration-progress.json
TG_LOG_FILE=./migration.log
TG_LOG_LEVEL=info

# Dialog Filters (comma-separated)
# Available types: private, group, supergroup, channel, bot
# TG_EXCLUDE_TYPES=bot,channel
# TG_INCLUDE_TYPES=private,group
